<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/onefivetwo"
    android:layout_height="@dimen/onefivetwo"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgProductImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/txtProductPrice"
        android:layout_width="@dimen/sixzero"
        android:layout_height="@dimen/threezero"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/five"
        android:background="@android:color/black"
        android:gravity="center"
        android:text="$3"
        android:textColor="@android:color/white"
        android:textSize="@dimen/onetwo" />

    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fourzero"
        android:layout_alignParentBottom="true"
        android:background="#77000000"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="@dimen/onetwo" />

</RelativeLayout>