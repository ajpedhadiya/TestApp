<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.dss.testapp.StartActivity" >

    <TextView
        android:id="@+id/txtSignUp"
        android:layout_width="@dimen/eightzero"
        android:layout_height="@dimen/fourzero"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:text="SIGN UP"
        android:textColor="@android:color/black"
        android:textSize="@dimen/onetwo"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgCenterIcon"
        android:layout_width="@dimen/fivezero"
        android:layout_height="@dimen/fivezero"
        android:layout_centerInParent="true"
        android:src="@drawable/icon" />

    <RelativeLayout
        android:id="@+id/relGo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fivezero"
        android:layout_below="@+id/imgCenterIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fivezero" >

        <ImageView
            android:layout_width="@dimen/fivezero"
            android:layout_height="@dimen/fivezero"
            android:layout_centerInParent="true"
            android:padding="@dimen/onetwo"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

</RelativeLayout>